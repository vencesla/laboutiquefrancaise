{% extends 'base.html.twig' %}


    {% block body %}
    <div class="container my-5">
        <h1>Mon panier</h1>
        <diV class="row">
            <div class="col-md-8">
                Liste de mes produits
                {% for product in cart %}
                <div class="row mt-2">
                    <div class="col-md-2">
                        <img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name}}">
                    </div>
                    <div class="col-md-6">
                        <strong>{{ product.object.name}}</strong>
                        <span class="d-block small">Prix unitaire : {{ product.object.pricewt|price }}</span>
                    </div>
                    <div class="col-md-2 text-right">
                        <a href="{{ path('app_decrease_cart', {id: product.object.id}) }}" class="text-decoration-none fw-bold">- </a>
                        <span class="badge text-bg-secondary">x{{ product.qty }}</span>
                        <a href="{{ path('app_add_cart', {id: product.object.id}) }}" class="text-decoration-none fw-bold"> +</a>
                    </div>
                    <diV class="col-md-2">
                        <strong>{{ (product.qty * product.object.pricewt)|price }}</strong>
                    </div>
                </div>
                 {% endfor %} 
                <a href="{{ path('app_remove_cart') }}" class="d-block mt-2">Vider mon panier</a>
            </div>
            <div class="col-md-4">
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total produit</span>
                        <span class="fw-bold">{{ fullCartQuantity }}</span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Prix total</span>
                        <span class="fw-bold">{{ totalPriceWt|price }}</span>
                    </div>
                    <div>
                        <a href="{{ path('app_order') }}" class="btn btn-success w-100 mt-3">Commander</a>
                    </div>
                </div>
                RÃ©cap de mon panier 
                Total
            </div>
        </div>
        
    </div>
    {% endblock %}
    