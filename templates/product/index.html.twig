{% extends 'base.html.twig' %}


    {% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <img src="/uploads/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}">
            </div>
            <div class="col-md-6">
                <small><a href="{{ path('app_category', {'slug': product.category.slug}) }}">{{ product.category }}</a> > {{ product.name }}</small>
                <h1>{{ product.name }}</h1>
                <span class="d-block mb-3">{{ product.pricewt|price }}</span>
                {{ product.description|raw }}
                <a href="{{ path('app_add_cart', {id : product.id }) }}" class="btn btn-success w-100 mt-3">Ajouter au panier</a>
            </div>
        </div> 
    </div>
    {% endblock %}
    